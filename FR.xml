<?xml version="1.0" encoding="ISO-8859-1"?>

<process-definition xmlns="urn:jbpm.org:jpdl-3.2" name="Fluxo de redistribuição"> 
    <!-- SWIMLANES -->
    <swimlane name="Nó de Desvio - Fluxo de redistribuição">
        <assignment pooled-actors="#{localizacaoAssignment.getPooledActors('197:1338,7:1469')}"/>
    </swimlane>
    <swimlane name="Secretaria">
        <assignment pooled-actors="#{localizacaoAssignment.getPooledActors('197:1338,1052:1338,1052:5894')}" actor-id="#{actor.id}"/>
    </swimlane>  
    <!-- START-STATE -->
    <start-state name="Início">
        <task name="Tarefa inicial"/>
        <transition to="FR - Redistribuir processo" name="FR - Redistribuir processo"/>
    </start-state>  
    <!-- NODES -->
    <end-state name="Término"/>
    <task-node end-tasks="true" name="Nó de Desvio - Fluxo de redistribuição">
        <task name="Nó de Desvio - Fluxo de redistribuição" swimlane="Nó de Desvio - Fluxo de redistribuição"/>
        <transition to="Término" name="Término"/>
        <transition to="FR - Redistribuir processo" name="FR - Redistribuir processo"/>
    </task-node>
    <task-node end-tasks="true" name="FR - Redistribuir processo">
        <task name="FR - Redistribuir processo" swimlane="Secretaria">
            <controller>
                <variable name="Processo_Fluxo_abaRedistribuicaoProcesso" mapped-name="frame:Processo_Fluxo_abaRedistribuicaoProcesso" access="read,write"/>
            </controller>
        </task>
        <transition to="Nó de Desvio - Fluxo de redistribuição" name="Nó de Desvio - Fluxo de redistribuição">
            <condition expression="#{true}"/>
        </transition>
        <transition to="Término" name="Cancelar"/>
    </task-node>  
    <!-- PROCESS-EVENTS -->
    <event type="node-enter">
        <script>br.com.infox.ibpm.util.JbpmEvents.raiseEvent(executionContext)</script>
    </event>
